<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_start_demoservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start demoservice"/>

    <Button
        android:id="@+id/btn_stop_demoservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_start_demoservice"
        android:text="stop demoservice"/>

    <Button
        android:id="@+id/btn_bind_demoservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_stop_demoservice"
        android:text="bind demoservice"/>

    <Button
        android:id="@+id/btn_unbind_demoservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_bind_demoservice"
        android:text="unbind demoservice"/>

</RelativeLayout>